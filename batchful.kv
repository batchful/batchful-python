WindowManager:
    MainWindow:
    NameWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        Label:
            text: "batchful"
            font_size: 100

        GridLayout:
            cols: 2

            Button:
                text: "Sort By Extension"
                font_size: 30
                on_press: root.by_ext_button()

            Button:
                text: "Sort By Name"
                font_size: 30
                on_release:
                    app.root.current = "name"
                    root.manager.transition.direction = "left"

            Label:
                text: "Search Sub-Folders"
                font_size: 30
            CheckBox:
                on_active:

        Button:
            text: "Quit"
            font_size: 40
            on_release:
                App.get_running_app().stop()



<NameWindow>:
    name: "name"
    phrase: phrase

    GridLayout:
        cols:2

        Label:
            text: "Enter A Phrase:"
            font_size: 40
        TextInput:
            id: phrase

        Button:
            text: "Search"
            on_release:
                root.by_name_button()
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"